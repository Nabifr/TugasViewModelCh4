<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/teal_200"
    app:cardCornerRadius="15dp"
    android:elevation="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvJudulFilm"
            android:text="@string/judul_film"
            android:textStyle="bold"
            android:layout_below="@+id/ivFilmImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTglRelease"
            android:text="@string/tanggal_rilis"
            android:textStyle="bold"
            android:layout_below="@+id/tvJudulFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ivFilmImg"
            android:layout_width="195dp"
            android:layout_height="195dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>